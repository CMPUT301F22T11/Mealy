<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Mealy" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/accent_red</item>
        <item name="colorPrimaryVariant">@color/accent_red</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent_grey</item>
        <item name="colorSecondaryVariant">@color/accent_grey</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/background</item>
        <!--        <item name="android:background">@color/background</item>-->
        <item name="android:headerBackground">@color/accent_red</item>
    </style>
    <style name="CustomListItem" parent="android:Widget.TextView">
        <item name="android:background">@drawable/listitem</item>
    </style>
    <style name="Ovular">
        <item name="cornerSize">30%</item>
    </style>
    <style name="RoundSquare">
        <item name="cornerSize">10%</item>
    </style>
    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/accent_grey</item>
        <item name="android:textColor">@color/accent_red</item>
        <item name="android:buttonBarButtonStyle">@style/ButtonStyle</item>
    </style>

    <style name="ButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/accent_red</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="CheckboxStyle" parent="Base.Theme.AppCompat">
        <item name="colorAccent">@color/green</item> <!-- for uncheck state -->
        <item name="android:textColorSecondary">@color/accent_red</item> <!-- for check state -->
    </style>
</resources>