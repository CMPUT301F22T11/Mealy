<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/accent_grey"
        android:orientation="vertical">

        <TextView
            android:id="@+id/meal_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corner"
            android:minHeight="64sp"
            android:text="Meal Title"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/accent_grey"
            android:textSize="25sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="16sp"
            android:layout_marginLeft="16sp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mealDateText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Dates: "
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10sp"
                android:textSize="18sp"
                android:textColor="@color/dark_gray"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/mealDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/accent_red"
                android:textSize="16sp"
                android:text="Empty" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="16sp"

            android:layout_marginLeft="16sp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mealRecipeListText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/dark_gray"
                android:text="Recipes: "
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10sp"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/mealRecipeListDisplay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/accent_red"
                android:textSize="16sp"

                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="16sp"
            android:layout_marginLeft="16sp"
            android:layout_marginBottom="16sp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mealIngredientListText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/dark_gray"
                android:text="Ingredients: "
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10sp"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/mealIngredientListDisplay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/accent_red"
                android:textSize="16sp"
                android:text="" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>